<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <TextView
        android:id="@+id/texto_horarios"
        android:layout_width="311dp"
        android:layout_height="73dp"
        android:layout_marginBottom="796dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/texto_horarios"
        android:textColor="#C7CEDB"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_tempo_1"
        android:layout_width="346dp"
        android:layout_height="88dp"
        android:layout_marginBottom="636dp"
        android:background="@drawable/primary_background_btn"
        android:fontFamily="@font/inter_bold"
        android:text="@string/btn_tempo_1"
        android:textAllCaps="false"
        android:textColor="#030304"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_tempo_2"
        android:layout_width="346dp"
        android:layout_height="88dp"
        android:layout_marginBottom="532dp"
        android:background="@drawable/primary_background_btn"
        android:fontFamily="@font/inter_bold"
        android:text="@string/btn_tempo_2"
        android:textAllCaps="false"
        android:textColor="#030304"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_tempo_3"
        android:layout_width="346dp"
        android:layout_height="88dp"
        android:layout_marginBottom="428dp"
        android:background="@drawable/primary_background_btn"
        android:fontFamily="@font/inter_bold"
        android:text="@string/btn_tempo_3"
        android:textAllCaps="false"
        android:textColor="#030304"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_tempo_4"
        android:layout_width="346dp"
        android:layout_height="88dp"
        android:layout_marginBottom="324dp"
        android:background="@drawable/primary_background_btn"
        android:fontFamily="@font/inter_bold"
        android:text="@string/btn_tempo_4"
        android:textAllCaps="false"
        android:textColor="#030304"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_tempo_5"
        android:layout_width="346dp"
        android:layout_height="88dp"
        android:layout_marginBottom="220dp"
        android:background="@drawable/primary_background_btn"
        android:fontFamily="@font/inter_bold"
        android:text="@string/btn_tempo_5"
        android:textAllCaps="false"
        android:textColor="#030304"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Confirmar_locacao"
        android:layout_width="361dp"
        android:layout_height="74dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/unselected_button"
        android:fontFamily="@font/inter_bold"
        android:text="@string/Confirmar_locacao"
        android:textAllCaps="false"
        android:textColor="#FBF9F9"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.709"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_tempo_5" />

    <Button
        android:id="@+id/voltar_tempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
        android:fontFamily="@font/inter_medium"
        android:text="@string/voltar_tempo"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#ECF3FF"
        android:textSize="16sp"
        app:flow_verticalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>