<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DuasPessoasAlocacao1Activity">

    <Button
        android:id="@+id/nextPersonButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Próxima Pessoa"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/openMomentarilyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abrir Momentaneamente"
        android:layout_below="@id/nextPersonButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/closeAllocationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Encerrar Locação"
        android:layout_below="@id/openMomentarilyButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/closeAllocationButton"
        android:layout_marginTop="16dp"
        android:scaleType="fitCenter" />

</RelativeLayout>